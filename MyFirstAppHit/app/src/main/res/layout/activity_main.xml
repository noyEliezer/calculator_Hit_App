<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="operatorFunc"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffc6c3"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Result Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_weight="0.3"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- First Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonClear"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="clearFunc"
            android:text="AC" />
        <Button
            android:id="@+id/buttonPosNeg"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="changeSign"
            android:text="+/-" />
        <Button
            android:id="@+id/buttonPercentage"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="calculatePercentage"
            android:text="%" />
        <Button
            android:id="@+id/buttonDivide"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="operatorFunc"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonOne"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            style="@style/ButtonStyle"
            android:text="1"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonTwo"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            style="@style/ButtonStyle"
            android:text="2"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonThree"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            style="@style/ButtonStyle"
            android:text="3"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonPlus"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="operatorFunc"
            android:text="+" />
    </LinearLayout>

    <!-- Second Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonFour"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="4"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonFive"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="5"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonSix"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="6"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonMinus"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="operatorFunc"
            android:text="-" />
    </LinearLayout>

    <!-- Third Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonSeven"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="7"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonEight"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="8"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonNine"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="9" />
        <Button
            android:id="@+id/buttonMultiple"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="operatorFunc"
            android:text="*" />
    </LinearLayout>

    <!-- Fourth Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonZero"
            android:background="@drawable/buttondesign"
            style="@style/ButtonStyle"
            android:onClick="numFunc"
            android:text="0"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/buttonPoint"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="dotFunc"
            android:text="." />

        <Button
            android:id="@+id/buttonAnswer"
            android:background="@drawable/calcdesign"
            style="@style/ButtonStyle"
            android:onClick="calculateResult"
            android:text="=" />
    </LinearLayout>

</LinearLayout>
